<h1>Signup</h1>
<form {{action 'createUser' on="submit"}}>
  <div class="signup-form">
    {{input type="text" placeholder="Email" value=email}}
    {{#if errors.email}}
      <span class="error errorForValidation">{{errors.email}}</span>
    {{/if}}
    {{#each server_errors.email  as |error|}}
      <div class="error">
        {{error.message}}
      </div>
    {{/each}}
    <br>
    Password: {{input type="password" value=password}}
    Confirm Password: {{input type="password" value=passwordConfirmation}}
    <button class="btn btn-primary" type="submit" disabled={{isInvalid}}>Submit</button>
  </div>
</form>
